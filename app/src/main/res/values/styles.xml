<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">

    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

    </style>


    <style name="acmeFont">
        <item name="fontPath">acme_regular.ttf</item>
    </style>

    <style name="chunkfive">
        <item name="fontPath">lato_bold.ttf</item>
    </style>

    <style name="pinStyle">
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:textSize">@dimen/_25sdp</item>
        <item name="android:layout_width">@dimen/_70sdp</item>
        <item name="android:height">@dimen/_60sdp</item>
        <item name="android:maxLength">1</item>
        <item name="android:layout_margin">@dimen/_4sdp</item>
        <item name="android:maxLines">1</item>

        <item name="android:digits">0123456789</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:background">@drawable/shape_rounded_sky</item>
        <item name="android:inputType">number</item>
    </style>


    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/colorWhite</item>
        <item name="android:bottomDark">@color/colorWhite</item>
        <item name="android:bottomMedium">@color/colorWhite</item>
        <item name="android:centerBright">@color/colorWhite</item>
        <item name="android:centerDark">@color/colorWhite</item>
        <item name="android:centerMedium">@color/colorWhite</item>
        <item name="android:fullBright">@drawable/progress_drawable</item>
        <item name="android:fullDark">@drawable/progress_drawable</item>
        <item name="android:topBright">@color/colorWhite</item>
        <item name="android:topDark">@color/colorWhite</item>
    </style>

    <style name="AppTheme.ProgressDialog.Theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <!--  <item name="android:windowBackground">@android:color/transparent</item>-->
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>

        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="android:layout_gravity">center</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>



    <declare-styleable name="SmileRating">
        <attr name="angryColor" format="color" />
        <attr name="normalColor" format="color" />
        <attr name="drawingColor" format="color" />
        <attr name="showLine" format="boolean" />
        <attr name="placeHolderSmileColor" format="color" />
        <attr name="placeHolderBackgroundColor" format="color" />
        <attr name="textSelectionColor" format="color" />
        <attr name="textNonSelectionColor" format="color" />
        <attr name="isIndicator" format="boolean" />
    </declare-styleable>
</resources>
