<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="@dimen/_350sdp"
    android:layout_height="match_parent"
    android:layout_gravity="center"

    android:elevation="@dimen/_5sdp"
    card_view:cardCornerRadius="@dimen/_5sdp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Pin Verification"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_25sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <EditText
                android:id="@+id/edtCode1"
                style="@style/pinStyle"
                android:layout_width="0dp"
                android:layout_height="@dimen/_65sdp"
                android:imeOptions="actionNext"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/edtCode2"
                style="@style/pinStyle"
                android:layout_width="0dp"
                android:imeOptions="actionNext"
                android:layout_height="@dimen/_65sdp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/edtCode3"
                style="@style/pinStyle"
                android:layout_width="0dp"
                android:layout_height="@dimen/_65sdp"
                android:layout_weight="1"
                android:imeOptions="actionNext"

                />

            <EditText
                android:id="@+id/edtCode4"
                style="@style/pinStyle"
                android:layout_width="0dp"
                android:layout_height="@dimen/_65sdp"
                android:layout_weight="1"
                android:imeOptions="actionDone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="20dp">

            <Button
                android:id="@+id/btn_yes"
                android:layout_width="130dp"
                android:layout_height="70dp"
                android:background="#dddddd"
                android:clickable="true"
                android:text="Yes"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_no"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_rounded_sky"
                android:clickable="true"
                android:padding="@dimen/_10sdp"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>